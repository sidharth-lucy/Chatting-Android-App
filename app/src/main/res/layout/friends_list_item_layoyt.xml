<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="@dimen/padding_20dp"
    android:layout_marginBottom="@dimen/padding_15dp">

    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/_civ_user_img"
        android:layout_width="@dimen/padding_60dp"
        android:layout_height="@dimen/padding_60dp"
        android:src="@drawable/img"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/color_e6fff2"
        />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jack Reacher"
        android:fontFamily="cursive"
        android:textSize="@dimen/padding_20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="@dimen/padding_8dp"
        android:textColor="@color/purple_700"
        android:textFontWeight="700"
        />
</LinearLayout>